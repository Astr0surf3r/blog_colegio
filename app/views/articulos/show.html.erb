<h1>Articulos#show</h1>
<p>Find me in app/views/articulos/show.html.erb</p>

<h2><%= @articulo.titulo %></h2> <br />

<%= @articulo.descripcion %>

<p>
	Categorias de este articulo:

	<% @categorias.each do |c| %>

	<%= link_to c.nombre, categoria_path(c) %>

	<% end %>
<p>

Agrega Categoria
</p>

<%= form_for (@relacion) do |a| %>

<%= a.collection_select(:categoria_id, Categoria.all, :id, :nombre) %>
<%= a.hidden_field :articulo_id, :value => params[:id] %>

<%= a.submit 'Asigna Categoria >>'%>
<% end %>

<hr>
<ul>
<% @comentarios.each do |c| %>

<li><%= c.contenido %> </li>

<% end %>
</ul>
<h4> Escriber un comentario </h4>
<%= form_for (@comentario) do |c| %>

<%= c.text_field :contenido, :placeholder => "Inserta un comentario" %>
<%= c.hidden_field :articulo_id, :value => params[:id] %>
<%= c.submit 'Enviar' %>

<% end %>