<h1>Usuarios#new</h1>
<p>Find me in app/views/usuarios/new.html.erb</p>

<%= form_for (@usuario) do |u| %>
<% if @usuario.errors.any? %>

<%= @usuario.errors.full_messages.join("<br />").html_safe %> <br />

<% end %>

<%= u.label :nombre_usuario %> <br />
<%= u.text_field :nombre_usuario %> <br />

<%= u.label :password %> <br />
<%= u.password_field :password %> <br /><br />

<%= u.label :password_confirmation %> <br />
<%= u.password_field :password_confirmation %> <br /><br />

<%= u.submit 'Crear Usuario' %>

<% end %>

